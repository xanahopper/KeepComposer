<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/label_source_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SourceIndex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/source_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/label_source_index"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Decoded:"
        app:layout_constraintEnd_toStartOf="@id/img_decoded"
        app:layout_constraintTop_toTopOf="@id/img_decoded"
        app:layout_constraintBottom_toBottomOf="@id/img_decoded"/>

    <ImageView
        android:id="@+id/img_decoded"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PresentationTimeUs"
        app:layout_constraintTop_toBottomOf="@id/label_source_index"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pts_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/label_pts"
        app:layout_constraintStart_toEndOf="@id/label_pts"/>

    <TextView
        android:id="@+id/label_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dequeue input buffer time"
        app:layout_constraintTop_toBottomOf="@id/label_pts"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/label_input"
        app:layout_constraintStart_toEndOf="@id/label_input"/>

    <TextView
        android:id="@+id/label_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read sample time"
        app:layout_constraintTop_toBottomOf="@id/label_input"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/read_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/label_read"
        app:layout_constraintStart_toEndOf="@id/label_read"/>

    <TextView
        android:id="@+id/label_decode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decode time"
        app:layout_constraintTop_toBottomOf="@id/label_read"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/decode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/label_decode"
        app:layout_constraintStart_toEndOf="@id/label_decode"/>

    <TextView
        android:id="@+id/label_render"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Render time"
        app:layout_constraintTop_toBottomOf="@id/label_decode"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/render_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/label_render"
        app:layout_constraintStart_toEndOf="@id/label_render"/>
</android.support.constraint.ConstraintLayout>